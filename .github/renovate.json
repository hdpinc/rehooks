{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 9am on wednesday"],
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 9am on wednesday"]
  },
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch", "minor"],
      "groupName": "Dev dependencies (non-major)"
    },
    {
      "groupName": "react",
      "packageNames": ["react", "react-dom"]
    }
  ]
}
