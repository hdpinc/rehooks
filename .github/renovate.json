{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 9am on sunday"],
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  },
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"]
    },
    {
      "groupName": "react",
      "packageNames": ["react", "react-dom"]
    }
  ]
}
