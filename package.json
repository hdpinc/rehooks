{
  "name": "@jmdc/rehooks",
  "version": "0.5.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "package.json",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "yarn run build:js && yarn run build:types",
    "build:js": "cross-env BABEL_ENV=production babel src -d dist --extensions '.ts,.tsx' --ignore '**/*.spec.tsx,**/*.stories.tsx'",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "jest": "TZ=Asia/Tokyo jest --verbose --color",
    "karma": "karma start",
    "karma:chrome": "karma start --single-run --browsers Chrome",
    "karma:firefox": "karma start --single-run --browsers Firefox",
    "karma:edge": "karma start --single-run --browsers Edge",
    "karma:ie": "karma start --single-run --browsers ie_no_addons",
    "karma:safari": "karma start --single-run --browsers Safari",
    "lint": "eslint . --ext '.js,.ts,.tsx'",
    "prebuild": "yarn clean",
    "prepare": "yarn build",
    "release": "standard-version"
  },
  "peerDependencies": {
    "react": ">=16.12.0"
  },
  "dependencies": {
    "core-js": "^3.6.1",
    "date-fns": "^2.8.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@jmdc/eslint-config-typescript-react": "^0.12.0",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.24",
    "@types/react": "^16.9.17",
    "@types/webpack": "^4.41.1",
    "@types/webpack-env": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "jasmine": "^3.5.0",
    "jest": "^24.9.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.2.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^3.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^4.0.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5"
  }
}
