{
  "name": "@jmdc/rehooks",
  "version": "0.8.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hdpinc/rehooks"
  },
  "bugs": {
    "url": "https://github.com/hdpinc/rehooks/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "package.json",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "yarn run build:js && yarn run build:types",
    "build:js": "cross-env BABEL_ENV=production babel src -d dist --extensions '.ts,.tsx' --ignore '**/*.spec.tsx,**/*.stories.tsx'",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "jest": "TZ=Asia/Tokyo jest --verbose --color",
    "karma": "karma start",
    "karma:chrome": "karma start --single-run --browsers Chrome",
    "karma:firefox": "karma start --single-run --browsers Firefox",
    "karma:edge": "karma start --single-run --browsers Edge",
    "karma:ie": "karma start --single-run --browsers ie_no_addons",
    "karma:safari": "karma start --single-run --browsers Safari",
    "lint": "eslint . --ext '.js,.ts,.tsx'",
    "prebuild": "yarn clean",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "date-fns": "^2.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jmdc/eslint-config-typescript-react": "^0.12.0",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^8.0.0",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.25",
    "@types/react": "^16.9.19",
    "@types/webpack": "^4.41.3",
    "@types/webpack-env": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jasmine": "^3.5.0",
    "jest": "^25.1.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.3.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^3.1.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^4.0.2",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "semantic-release": "^16.0.3",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5"
  }
}
