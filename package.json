{
  "name": "@jmdc/rehooks",
  "version": "1.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hdpinc/rehooks"
  },
  "bugs": {
    "url": "https://github.com/hdpinc/rehooks/issues"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "package.json",
    "lib",
    "esm",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "cross-env BABEL_ENV=production babel src -d lib --extensions '.ts,.tsx' --ignore '**/*.spec.tsx,**/*.stories.tsx'",
    "build:esm": "cross-env BABEL_ENV=production babel src -d esm --extensions '.ts,.tsx' --ignore '**/*.spec.tsx,**/*.stories.tsx' --config-file ./.babelrc.esm.js",
    "build:types": "tsc -p tsconfig.types.json --outDir lib && tsc -p tsconfig.types.json --outDir esm",
    "clean": "rimraf lib && rimraf esm",
    "jest": "TZ=Asia/Tokyo jest --verbose --color --coverage",
    "karma": "karma start",
    "karma:chrome": "karma start --single-run --browsers ChromeHeadless",
    "karma:firefox": "karma start --single-run --browsers FirefoxHeadless",
    "karma:edge": "karma start --single-run --browsers Edge",
    "karma:ie": "karma start --single-run --browsers ie_no_addons",
    "karma:safari": "karma start --single-run --browsers Safari",
    "lint": "eslint . --ext '.js,.ts,.tsx'",
    "prebuild": "yarn clean",
    "prepare": "yarn build",
    "test": "yarn jest",
    "typecheck": "tsc -p tsconfig.types.json --noEmit --emitDeclarationOnly false"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "date-fns": "^2.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jmdc/eslint-config-typescript-react": "^0.13.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.2",
    "@types/node": "^12.12.27",
    "@types/react": "^16.9.19",
    "@types/webpack": "^4.41.6",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.3",
    "jasmine": "^3.5.0",
    "jest": "^25.1.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.3.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^3.1.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^4.0.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.3",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6"
  }
}
